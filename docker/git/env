# -*- mode: sh -*-

# Don't override system's git as that breaks the prompt
docker_git() {
    docker run \
           --rm \
           -it \
           -h cxr-git \
           --user $(id -u) \
           --net=host \
           -v /etc/passwd:/etc/passwd:ro \
           -v /etc/group:/etc/group:ro \
           -v $HOME:$HOME \
           -w $(pwd) \
           arch_git \
           /usr/bin/git "$@"
}
